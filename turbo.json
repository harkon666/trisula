{
  "$schema": "https://turborepo.dev/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "PRIVATE_KEY_OPERATOR",
    "RPC_URL",
    "CHAIN_ID"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".vercel/output/**"
      ],
      "env": [
        "NEXT_PUBLIC_THIRDWEB_CLIENT_ID",
        "NEXT_PUBLIC_CHAIN_ID",
        "NEXT_PUBLIC_API_URL",
        "SECRET_KEY"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}